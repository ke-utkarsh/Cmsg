<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize text colors here -->
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
    <style name="TextViewStyleValue1" parent="android:Widget.TextView">
        <item name="android:textColor">@color/list_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/dmsansregular</item>
    </style>

    <style name="TextViewStyleValue2" parent="android:Widget.TextView">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dmsansregular</item>
    </style>

    <style name="TextViewStyleValueHeading" parent="android:Widget.TextView">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dmsansregular</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:backgroundTint">@color/color_primary_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="SpinnerCardView" parent="CardView">
        <item name="android:drawableStart">@drawable/icon_filter_spinner</item>
    </style>

    <style name="imageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">51%</item>
    </style>
</resources>